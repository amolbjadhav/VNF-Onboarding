node_types:
    osm.nodes.Server:
        derived_from: osm.nodes.Compute
        properties:
            name:
                type: string
                description: Name of node
                default: ''
            template:
                type: string
                description: Name of OSM template
                default: ''
            epa_description:
                type: string
                description:EPA Description 
                default: ''
            hardware:
                type: osm.Hardware
                description: Description of servers hardware
                default: {}

data_types:
    osm.Hardware:
        properties:
            memory:
                type: scalar-unit.size
                description: Amount of memory
                default: 0 GB
            cpu:
                type: integer
                description: Number of CPUs
                default: 1
